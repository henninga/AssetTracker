<UserControl x:Class="AssetTracker.Views.AddProgramView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
   
    <StackPanel Width="450" HorizontalAlignment="Center">
        <TextBlock Text="Name:" />
        <TextBox x:Name="Name">
            <TextBox.CaretBrush>
                <SolidColorBrush Color="Gray" />
            </TextBox.CaretBrush>
        </TextBox>
       

        <TextBlock Text="Notes:"/>
        <TextBox x:Name="Notes"
                 Height="120">
            <TextBox.CaretBrush>
                <SolidColorBrush Color="Gray" />
            </TextBox.CaretBrush>
        </TextBox>

        <Button x:Name="AddProgram"
                Content="Add"
                HorizontalAlignment="Right"
                Margin="0 12 0 0" />
    </StackPanel>

</UserControl>
