<Window x:Class="AssetTracker.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:at="clr-namespace:AssetTracker.UserControls" Icon="..\Logo.ico" Title="Asset Tracker" >

    <DockPanel >

        <DockPanel DockPanel.Dock="Top" LastChildFill="True" >
            <Button x:Name="Back" Content="Home" HorizontalAlignment="Left" VerticalAlignment="Top" DockPanel.Dock="Left" Margin="8,15,0,0"  />
            <at:BusyIndicator x:Name="IsBusy" DockPanel.Dock="Right" Margin="0,15,0,0"  />
        </DockPanel>

        <ContentControl DockPanel.Dock="Left" x:Name="ProgramSearch" />
        
        <ContentControl DockPanel.Dock="Right" x:Name="ActiveItem" Margin="20 15 10 15"/>
    </DockPanel>
</Window>
