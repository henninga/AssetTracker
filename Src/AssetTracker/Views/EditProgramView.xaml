<UserControl x:Class="AssetTracker.Views.EditProgramView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
   
    <StackPanel Width="450" HorizontalAlignment="Center">
        <Label Content="_Name: " Target="{Binding ElementName=Name}"/>
        <TextBox x:Name="Name">
            <TextBox.CaretBrush>
                <SolidColorBrush Color="Gray" />
            </TextBox.CaretBrush>
        </TextBox>
       
        <Label Content="_Notes: " Target="{Binding ElementName=Notes}" />
        <TextBox x:Name="Notes"
                 Height="120">
            <TextBox.CaretBrush>
                <SolidColorBrush Color="Gray" />
            </TextBox.CaretBrush>
        </TextBox>

        <Button x:Name="Save"
                Content="Save"
                HorizontalAlignment="Right"
                Margin="0 12 0 0" 
                IsDefault="True"/>
    </StackPanel>

</UserControl>
